<!doctype html>
<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="index.css">
  <!-- <link rel="stylesheet" href="write.css"> -->

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

  <title>todo</title>
</head>

<body>





  
  <div class="container">
    <%- include('nav.html') %>



    <form action="/edit?_method=PUT" method="POST" class="write-form">
      <div class="form-group">
        <label for="todo">할일</label>
        <input type="text" value="<%= data.게시물번호%>" name="id" style="display: none;">
        <input type="text" class="form-control" id="todo" autocomplete="off" name="title" value="<%= data.제목%>">
      </div>
      <div class="form-group">
        <label for="date">날짜</label>
        <input type="date" class="form-control" id="date" autocomplete="off" name="date" value="<%= data.날짜%>">
      </div>
      <div class="form-group">
        <label for="momo">메모</label>
        <textarea name="memo" id="memo" class="form-control"><%= data.메모%></textarea>
      </div>
      <button type="submit" class="btn btn-primary">저장</button>
      <a href="/list" class="btn btn-danger">취소</a>
    </form>
  </div>





  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
</body>

</html>