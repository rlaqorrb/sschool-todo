<!doctype html>
<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.6.1.min.js"
    integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>

  <title>todo</title>
  <link rel="stylesheet" href="index.css">

  <script src="https://kit.fontawesome.com/6e4abe1f96.js" crossorigin="anonymous"></script>
</head>

<body>





  <div class="container">

    <nav class="navbar navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="#">Todo App</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/write">Write</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/list">List</a>
          </li>
      </div>
    </nav>



    <% for(var i=0; i < posts.length; i++){ %>
      <div class="list">
        <div class="list-item">
          <h4><%= posts[i].제목%></h4>
          <p><%= posts[i].날짜 %></p>
        </div>
        <div class="list-menu">
          <i class="fa-solid fa-ellipsis menu-btn" data-id="<%= i %>" data-click=""></i>
          <ul class="list-menu-items">
            <li>수정</li> 
            <li class="del" data-del_id="<%= posts[i].게시물번호%>">삭제</li>
          </ul>
        </div>
      </div>
      <% } %>
  </div>



  <script>
    $('.del').on('click', function(){
      console.log(this.dataset.del_id);

      $.ajax({
        method: 'DELETE',
        url: '/delete',
        // data: {게시물번호 : this.dataset.del_id}
      }).done(function(result){
  
      })
    })





    // 리스트 왼쪽 버튼
    $('.menu-btn').on('click', function(){
      console.log(Boolean(this.dataset.click));
      let click = Boolean(this.dataset.click);
      console.log(this.dataset.id);
      
      if(click == false){
        
        
        
        
        $('.list-menu-items').removeClass('show');
        $('.list-menu-items').eq(this.dataset.id).addClass('show');
        this.dataset.click = '1';
      } else if(click == true){
        $('.list-menu-items').eq(this.dataset.id).removeClass('show');
        this.dataset.click = '';
      }
    })

    $('.menu-btn').on('focus', function(e){
      console.log(e);
    })
  </script>





  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
</body>

</html>